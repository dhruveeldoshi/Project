<div id="div_search_bar">
  <form
    class="form-inline my-2 my-lg-0"
    id="searchForm"
    action="/search"
    method="POST"
  >
    <input
      id="search_bar"
      class="form-control mr-sm-2"
      type="search"
      placeholder="Search"
      aria-label="Search"
      name="searchTerm"
    />
    <button
      id="search_submit"
      class="btn my-2 my-sm-0"
      type="submit"
    >Search</button>
  </form>
</div>

<!-- Example single danger button -->

<div class="div_dropdown">
  <div class="dropdown show btn-group" id="ddl_plants">
    <a
      class="btn btn-secondary dropdown-toggle"
      href="#"
      role="button"
      id="dropdownMenuLink"
      data-toggle="dropdown"
      aria-haspopup="true"
      aria-expanded="false"
    >
      Select Product Type
    </a>

    <div
      class="dropdown-menu"
      id="displayProp"
      aria-labelledby="dropdownMenuLink"
    >
    </div>
  </div>

</div>

<div id="filterDiv">

</div>

